<li id="comment-<%= comment._id %>" >
    <p>
        <%= comment.content %>
            <br>
            <small>
                <%= comment.user.accountHolder %>
            </small>
            <% if (locals.user && locals.user.id==comment.user.id){ %>
                <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>" )">X Delete comment</a>
                </small>
                <% } %>
    </p>
</li>